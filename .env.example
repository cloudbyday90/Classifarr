# ===========================================
# CLASSIFARR CONFIGURATION
# ===========================================

# Database (auto-generated on first run - stored in shared volume)
# POSTGRES_PASSWORD is automatically generated and persisted
# No need to configure manually unless you want to set a specific password

# JWT Configuration (auto-generated on first run if not provided)
# JWT_SECRET=<will-be-auto-generated>
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY_DAYS=7

# Security Settings
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/app/certs/cert.pem
SSL_KEY_PATH=/app/certs/key.pem
SSL_CA_PATH=/app/certs/ca.pem
SSL_FORCE_HTTPS=true
SSL_CLIENT_CERT_REQUIRED=false

# Server Configuration
PORT=21324
HTTPS_PORT=21325
NODE_ENV=production
DATA_DIR=/app/data

# CORS Configuration
CORS_ORIGIN=*

# All other configuration is done through the web UI after setup
# Access the UI at http://localhost:21324 after starting the containers
